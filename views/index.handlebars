<div>
<h1>Eat Da Burger!</h1>
<img src="../assets/images/burgz-copy.png" id="burgerPic">
</div>

<div id="container">
  <div id="leftSide">
    <h2>Order Up!</h2>

    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
           
            {{this.burgerName}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devour" value="true">
              <button type="submit">DEVOUR IT!</button>
            </form>

            
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div id="rightSide">
    <h2>Clean Plates!</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burgerName}}
          
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="bottom">
  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>


    <button type="submit">Add Burger</button>
  </form>
</div>
